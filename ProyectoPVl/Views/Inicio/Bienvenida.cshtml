@model ProyectoPVl.Models.RetornaUsuarioCorreo_Result

@{
    ViewBag.Title = "Bienvenida";
}
@section css{
    <link href="~/Content/sprites.css" rel="stylesheet" />
}


    <div class="jumbotron text-center">
        <input type="hidden" id="Usuario" value="@Model.id_Usuario" />
        <input type="hidden" id="FechaUlIngreso" value="@Model.fechaUltimoIngreso" />
        <form class="form-horizontal">
            <div class="form-group text-center">
                <label class="control-label col-sm-1"></label>
                <div align="center">
                    <h2>Bienvenido(a) </h2>
                </div><br />
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4" for="nombreCompleto">Nombre Completo:</label>
                <div style="margin-top:7px">
                    @Html.DisplayFor(model => model.nombreCompleto)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4"> Fecha Ultimo Ingreso:</label>
                <div style="margin-top:7px">
                    <label id="Fecha_Inicio"></label>
                </div>
            </div>
            <div class="jumbotron text-center" id="divEncabezadoPagina">
            </div>
            <div class="container" id="divContenendorContenido">
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <ol id="olCarousel" class="carousel-indicators">
                        <li data-target="myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="myCarousel" data-slide-to="1"></li>
                        <li data-target="myCarousel" data-slide-to="2"></li>

                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <div class="item active">
                            <span class="sprite estudiantes1_opt"></span>
                        </div>
                        <div class="item">
                            <span class="sprite estudiantes2_opt"></span>
                        </div>
                        <div class="item">
                            <span class="sprite estudiantes3_opt"></span>
                        </div>
                        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Anterior</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            <span class="sr-only">Siguiente</span>
                        </a>
                    </div>
                </div>
            </div>
        </form>


        @section scripts {
            <script src="~/Scripts/Universidad/Bienvenida.js"></script>
        }

    </div>
