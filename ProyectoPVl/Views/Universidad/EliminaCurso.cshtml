@model ProyectoPVl.Models.RetornaCursoID_Result
<h3>Eliminar curso</h3> <br />
<form id="frmEliminarCurso" method="post">

	<input type="hidden" id="id_Curso" value="@Model.id_Curso" />

	<div  align="center">
		<label>Nombre del curso:</label>
		<input type="text" name="Nombre" id="Nombre" class="form-control" value="@Model.Nombre" readonly /><br />	
	</div>

	<div  align="center">
		<label>Código del curso:</label>
		<input type="text" name="Codigo" id="Codigo" class="form-control" value="@Model.Codigo" readonly />
	</div>
    <br />
	<div  align="center">
		<input type="button" value="Eliminar" id="btnEliminar"  class="btn-danger"/>
	</div>

</form>

@section scripts{
	<script src="~/Scripts/Universidad/EliminaCurso.js"></script>
}

