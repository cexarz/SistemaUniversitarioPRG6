@model ProyectoPVl.Models.RetornaEstudianteID_Result

<h3>Reporte de notas del estudiante</h3>

<input type="hidden" id="id_Estudiante" value="@Model.id_Estudiante" />

<div align="center">
	<label>Nombre del estudiante:</label>
	<input type="text" name="nombreEstudiante" id="nombreEstudiante" class="form-control" value="@Model.NombreCompleto" readonly />
</div>

<br />

<div align="center">
	<input type="button" value="Filtrar busqueda" id="btnFiltrarBusqueda" class="btn btn-success" />
</div>

<br />

<table class="table" id="tblNotas">
	<thead>
		<tr style="background-color:WindowFrame">
			<th>Nombre del estudiante</th>
			<th>Curso</th>
			<th>Nota</th>
			<th>Estado</th>
			<th>Sede</th>
			<th>Año</th>
			<th>Cuatrimestre</th>
		</tr>
	</thead>
	<tbody></tbody>
</table>

<div id="divDialog" hidden>
	<form id="frmBusqueda" method="post">

		<br />

		<div align="center">
			<label>Curso:</label>
			<select name="Curso" id="Curso" class="form-control"></select>
		</div>

		<br />

		<div align="center">
			<label>Cuatrimestre:</label>
			<select name="Cuatrimestre" id="Cuatrimestre" class="form-control"></select>
		</div>

		<br />

		<div align="center">
			<input type="button" value="Buscar" id="btnBuscar" class="btn btn-primary" />
		</div>
	</form>
</div>

@section scripts{
	<script src="~/Scripts/Universidad/ReporteNotasEstudiante.js"></script>
}

