@model ProyectoPVl.Models.RetornaCursoID_Result
<h3>Modificar curso</h3><br />

<form id="frmModificarCurso" method="post">

	<input type="hidden" id="id_Curso" value="@Model.id_Curso" />

	<div  align="center">
		<label>Nombre del curso:</label>
		<input type="text" name="Nombre" id="Nombre" class="form-control" value="@Model.Nombre" /><br />
	</div>

	<div  align="center">
		<label>Código del curso:</label>
		<input type="text" name="Codigo" id="Codigo" class="form-control" value="@Model.Codigo" />
	</div>
    <br />
	<div  align="center">
		<input type="button" value="Modificar" id="btnModificar" class="btn-warning"/>
	</div>

</form>

@section scripts{
	<script src="~/Scripts/Universidad/ModificaCurso.js"></script>
}

