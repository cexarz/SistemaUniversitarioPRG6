
<h3>Agregar una nueva sede universitaria</h3><br />

<form id="frmSede" method="post">

	<div  align="center">
		<label>Nombre:</label>
		<input type="text" name="nombre" id="nombre" class="form-control" /><br />
	</div>

	<div  align="center">
		<label>Código:</label>
		<input type="text" name="codigo" id="codigo" class="form-control" /><br />
	</div>

	<div  align="center">
		<label>Director:</label>
		<select name="Director" id="Director" class="form-control"></select><br />
	</div>

	<div  align="center">
		<label>Provincia:</label>
		<select name="id_Provincia" id="id_Provincia" class="form-control"></select><br />
	</div>

	<div  align="center">
		<label>Cantón:</label>
		<select name="id_Canton" id="id_Canton" class="form-control"></select><br />
	</div>

	<div  align="center">
		<label>Distrito:</label>
		<select name="id_Distrito" id="id_Distrito" class="form-control"></select><br />
	</div>

	<div  align="center">
		<label>Dirección exacta:</label>
		<input type="text" name="direccionFisica" id="direccionFisica" class="form-control" />
	</div>
    <br />
	<div align="center">
		<input type="button" value="Ingresar" id="btnIngresar" class="btn-primary" />
	</div>

</form>

@section scripts{
	<script src="~/Scripts/Universidad/Geografia.js"></script>
	<script src="~/Scripts/Universidad/AgregaSede.js"></script>
}