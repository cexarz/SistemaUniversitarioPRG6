
<h3>Agregar una nueva carrera</h3><br />

<form id="frmCarrera" method="post">

	<div align="center">
		<label>Nombre:</label>
		<input type="text" name="nombre" id="nombre" class="form-control" /> <br />
	</div>

	<div  align="center">
		<label>Código:</label>
		<input type="text" name="codigo" id="codigo" class="form-control" /><br />
	</div>

	<div  align="center">
		<label>Dirección de carrera:</label>
		<select name="DireccionCarrera" id="DireccionCarrera" class="form-control"></select>
	</div>
	<br />
	<div  align="center">
		<input type="button" value="Ingresar" id="btnIngresar" class="btn-primary" />
	</div>

</form>

@section scripts{
	<script src="~/Scripts/Universidad/AgregaCarrera.js"></script>
}

