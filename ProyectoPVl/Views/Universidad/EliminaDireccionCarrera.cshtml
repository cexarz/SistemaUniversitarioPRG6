@model ProyectoPVl.Models.RetornaDireccionCarreraID_Result
<h3>Eliminar dirección de carrera</h3><br />

<form id="frmEliminarDireccionCarrera" method="post">

	<input type="hidden" id="id_DireccionCarrera" value="@Model.id_DireccionCarrera" />

	<div  align="center">
		<label>Nombre de la dirección de carrera:</label>
		<input type="text" name="Nombre" id="Nombre" class="form-control" value="@Model.Nombre" readonly /><br />
	</div>

	<div  align="center">
		<label>Código del curso:</label>
		<input type="text" name="Codigo" id="Codigo" class="form-control" value="@Model.Codigo" readonly /><br />	
	</div>

	<div  align="center">
		<label>Director:</label>
		<input type="text" name="Director" id="Director" class="form-control" value="@Model.Director" readonly /><br />
	</div>

	<div  align="center">
		<label>Subdirector:</label>
		<input type="text" name="subDirector" id="subDirector" class="form-control" value="@Model.Subdirector" readonly /><br />
	</div>
    <br />
	<div  align="center">
		<input type="button" value="Eliminar" id="btnEliminar" class="btn-danger"/>
	</div>

</form>

@section scripts{
	<script src="~/Scripts/Universidad/EliminaDireccionCarrera.js"></script>
}
